<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.SplashScreen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="280.97dp"
        android:layout_height="218.8dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/design_elements" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="155dp"
        android:layout_height="42dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="176dp"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:shadowColor="#000000"
        android:text="Socialize"
        android:textColor="#000000"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="71dp"
        android:layout_height="56.36dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/design_element"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/button"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_marginBottom="93dp"
        app:cardBackgroundColor="#2FA5A6"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:text="Get Started"
            android:textColor="#FFFFFF"
            android:textSize="24dp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>